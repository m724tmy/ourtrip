<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row w-100">
    <!-- Left Section -->
    <div class="col-md-6 text-center my-auto">
      <h2 class="mb-3">ログイン</h2>
      <p class="text-muted">登録しているユーザーでログイン</p>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Right Section -->
    <div class="col-md-6">
      <div class="card shadow p-4">
        <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
          <!-- Email Field -->
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <!-- Password Field -->
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <small class="text-muted">(英数字6文字以上)</small>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
