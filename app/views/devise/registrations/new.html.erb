<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row w-100">
    <!-- Left Section -->
    <div class="col-md-6 text-center my-auto">
      <h2 class="mb-3">新規アカウント作成</h2>
    </div>

    <!-- Right Section -->
    <div class="col-md-6">
      <div class="card shadow p-4">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
          <!-- Error Messages -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Nickname Field -->
          <div class="mb-3">
            <%= f.label :nickname, class: "form-label" %>
            <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "ニックネーム" %>
          </div>

          <!-- Email Field -->
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <!-- Password Field -->
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <small class="text-muted d-block">(英数字6文字以上)</small>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
          </div>

          <!-- Password Confirmation Field -->
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード確認" %>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <%= f.submit "Create Account", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
