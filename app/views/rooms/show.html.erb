<h1><%= @room.room_name %></h1>

<div class="room-content">
  <!-- 左側: しおり一覧 -->
  <div class="schedules">
    <h2>しおり</h2>

        <p>タイトル: <%= @room.room_name %></p>
        <p>説明: <%= @room.description %></p>
        <p>開始日時: <%= @room.start_time %></p>
        <p>終了日時: <%= @room.end_time %></p>

<h2>スケジュール一覧</h2>
<ul>
  <% @room.schedules.each do |schedule| %>
    <li>
      <strong><%= schedule.title %></strong><br>
      <%= schedule.start_time.strftime("%Y-%m-%d %H:%M") %> 〜 <%= schedule.end_time.strftime("%Y-%m-%d %H:%M") %>
      <p><%= schedule.description %></p>
      <p>コスト: <%= schedule.cost %>円</p>
    </li>
  <% end %>
</ul>

    <%= link_to "スケジュールを追加", new_room_schedule_path(@room), class: "btn btn-primary" %>
    <%= link_to "もどる", root_path %>
    
  </div>

  <!-- 右側: 行きたい場所・候補一覧 -->

</div>