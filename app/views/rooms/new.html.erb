<h1>新規ルーム作成</h1>
<%= form_with model: @room, local: true do |f| %>
  <div>
    <%= f.label :room_name, "Room Name" %>
    <%= f.text_field :room_name, required: true %>
  </div>

  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :start_time, "Start Date & Time" %>
    <%= f.date_field :start_time %>
    <%= f.time_field :start_time %>
  </div>

  <div>
    <%= f.label :end_time, "End Date & Time" %>
    <%= f.date_field :end_time %>
    <%= f.time_field :end_time %>
  </div>

  <div>
    <%= f.submit "Create Room" %>
  </div>
<% end %>
<%= link_to "Back to Rooms List", rooms_path, class: "btn btn-secondary" %>