<div class="container">
  <h1 class="my-4 text-center">新規ルーム作成</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <%= form_with model: @room, local: true do |f| %>
          <!-- Room Name Field -->
          <div class="mb-3">
            <%= f.label :room_name, "タイトル", class: "form-label" %>
            <%= f.text_field :room_name, required: true, class: "form-control", placeholder: "タイトル名" %>
          </div>

          <!-- Description Field -->
          <div class="mb-3">
            <%= f.label :description, "説明", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", placeholder: "説明文" %>
          </div>

          <!-- Start Date & Time -->
          <div class="mb-3">
            <%= f.label :start_time, "Start Date & Time", class: "form-label" %>
            <div class="d-flex">
              <%= f.date_field :start_time, class: "form-control me-2" %>
              <%= f.time_field :start_time, class: "form-control" %>
            </div>
          </div>

          <!-- End Date & Time -->
          <div class="mb-3">
            <%= f.label :end_time, "End Date & Time", class: "form-label" %>
            <div class="d-flex">
              <%= f.date_field :end_time, class: "form-control me-2" %>
              <%= f.time_field :end_time, class: "form-control" %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <%= f.submit "しおり作成", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Back to Rooms List -->
        <div class="text-center mt-3">
          <%= link_to "もどる", rooms_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>