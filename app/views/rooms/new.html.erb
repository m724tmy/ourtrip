<div class="container py-5">
  <h1 class="my-4 text-center main-text-color">新規しおり作成</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <%= form_with model: @room, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :room_name, "タイトル", class: "form-label" %>
            <%= f.text_field :room_name, required: true, class: "form-control", placeholder: "タイトル名" %>
          </div>

          <div class="mb-3">
            <%= f.label :description, "説明", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", placeholder: "説明文" %>
          </div>

          <div class="mb-3">
            <%= f.label :start_time, "開始日時", class: "form-label" %>
            <div class="d-flex">
              <%= date_field_tag 'room[start_date]', @room.start_time.try(:to_date), class: "form-control me-2" %>
              <%= f.time_field :start_time, value: @room.start_time.try(:strftime, "%H:%M"), class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :end_time, "終了日時", class: "form-label" %>
            <div class="d-flex">
              <%= date_field_tag 'room[end_date]', @room.end_time.try(:to_date), class: "form-control me-2" %>
              <%= f.time_field :end_time, value: @room.end_time.try(:strftime, "%H:%M"), class: "form-control" %>
            </div>
          </div>
          <div class="text-center">
            <%= f.submit "しおり作成", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to "もどる", rooms_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>