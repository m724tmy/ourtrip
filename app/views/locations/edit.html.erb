<div class="container py-5">
  <h1 class="my-4 text-center">行きたい場所を編集</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <%= form_with model: [@room, @location], local: true do |f| %>
          <div class="mb-3">
            <%= f.label :title, "タイトル", class: "form-label" %>
            <%= f.text_field :title, required: true, class: "form-control", placeholder: "スケジュールタイトル" %>
          </div>

          <div class="mb-3">
            <%= f.label :start_time, "開始日時", class: "form-label" %>
            <div class="d-flex">
              <%= date_field_tag 'location[start_date]', @location.start_time.try(:to_date), class: "form-control me-2" %>
              <%= f.time_field :start_time, value: @location.start_time.try(:strftime, "%H:%M"), class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :end_time, "終了日時", class: "form-label" %>
            <div class="d-flex">
              <%= date_field_tag 'location[end_date]', @location.end_time.try(:to_date), class: "form-control me-2" %>
              <%= f.time_field :end_time, value: @location.end_time.try(:strftime, "%H:%M"), class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :description, "詳細", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", placeholder: "詳細を入力してください" %>
          </div>

          <div class="mb-3">
            <%= f.label :cost, "費用", class: "form-label" %>
            <%= f.number_field :cost, class: "form-control", placeholder: "費用を入力 (例: 5000)" %>
          </div>

          <div class="mb-3">
            <%= f.label :reference_url, "参考URL", class: "form-label" %>
            <%= f.text_field :reference_url, class: "form-control", placeholder: "例: https://example.com" %>
          </div>

          <div class="text-center">
            <%= f.submit "行きたい場所を編集", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to '削除する', room_location_path(@room, @location), data: { turbo_method: :delete, confirm: '本当に削除しますか？' }, class: 'btn btn-danger mx-2' %>
        </div>

        <div class="text-center mt-3">
          <%= link_to "もどる", room_path(@room), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>

</div>
