<h1>行きたい場所を編集</h1>

<%= form_with model: [@room, @location], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, '開始時間' %>
    <%= f.datetime_select :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, '終了時間' %>
    <%= f.datetime_select :end_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, '説明' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cost, 'コスト (円)' %>
    <%= f.number_field :cost, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :reference_url, '参照URL' %>
    <%= f.url_field :reference_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :latitude, '緯度' %>
    <%= f.text_field :latitude, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :longitude, '経度' %>
    <%= f.text_field :longitude, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '更新する', class: 'btn btn-primary' %>
    <%= link_to 'キャンセル', room_location_path(@room, @location), class: 'btn btn-secondary' %>
  </div>
<% end %>
